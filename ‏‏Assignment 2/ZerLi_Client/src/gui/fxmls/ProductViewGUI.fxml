				<Label id="lblTitleName" text="Name:" GridPane.rowIndex="2" />
				<TextField id="txtShowName" fx:id="txtShowName" alignment="CENTER" promptText="Enter Product Name" GridPane.columnIndex="1" GridPane.rowIndex="2" />
				<Label id="lblTitleType" text="Type:" GridPane.rowIndex="3" />
				<Label id="lblShowType" fx:id="lblShowType" GridPane.columnIndex="1" GridPane.rowIndex="3" />
				<Label id="lblMsg" fx:id="lblMsg" textFill="RED" GridPane.columnIndex="1" GridPane.rowIndex="5" />
				<Button id="btnUpdate" fx:id="btnUpdate" mnemonicParsing="false" onAction="#updateName" text="Update" GridPane.rowIndex="4" />
				<Button id="btnBack" fx:id="btnBack" mnemonicParsing="false" onAction="#backToAllProducts" text="Back" GridPane.columnIndex="1" GridPane.rowIndex="4" />
				<Button id="btnExit" fx:id="btnExit" mnemonicParsing="false" onAction="#ExitProg" text="Exit" GridPane.columnIndex="2" GridPane.rowIndex="4" />
			</children>
		</GridPane>
	</children>
