<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox id="vbox" fx:id="vbox" alignment="CENTER" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="izhar.gui.controllers.CartGUIController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Label fx:id="lblTitleFPrice" text="Final Price:" />
            <Label fx:id="lblFinalPrice" minWidth="50.0" />
         </children>
      </HBox>
      <Button alignment="CENTER" mnemonicParsing="false" onAction="#createOrder" text="Order Now!" />
      <Button mnemonicParsing="false" onAction="#loadMainMenu" text="Back" />
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
