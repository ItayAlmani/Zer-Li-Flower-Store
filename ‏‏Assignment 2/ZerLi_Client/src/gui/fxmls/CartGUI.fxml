<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fx:id="scroll" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="izhar.gui.controllers.CartGUIController">
   <content>
      <VBox fx:id="vbox" alignment="CENTER" spacing="4.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label fx:id="lblTitleFPrice" text="Final Price:" />
                  <Label fx:id="lblFinalPrice" minWidth="50.0" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#createOrder" text="Order Now!" />
            <Button mnemonicParsing="false" onAction="#loadMainMenu" text="Back" />
            <Label fx:id="lblMsg" />
         </children>
      </VBox>
   </content>
</ScrollPane>
