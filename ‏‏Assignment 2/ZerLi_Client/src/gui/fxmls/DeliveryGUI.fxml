<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="izhar.gui.controllers.DeliveryGUIController">
   <children>
      <HBox spacing="20.0">
         <children>
            <Label text="Choose Delivery Option:" />
            <VBox spacing="5.0">
               <children>
                  <RadioButton fx:id="rbPickup" mnemonicParsing="false" onAction="#showPickup" text="Pickup" />
                  <RadioButton fx:id="rbShipment" mnemonicParsing="false" onAction="#showShipment" text="Shipment" />
               </children>
            </VBox>
         </children>
      </HBox>
      <VBox fx:id="vboxForm" alignment="CENTER" spacing="10.0" visible="false">
         <children>
            <GridPane fx:id="gpPickup" prefHeight="24.0" prefWidth="289.0">
               <columnConstraints>
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="140.20001220703125" minWidth="10.0" prefWidth="76.99999237060547" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="214.59998321533203" minWidth="10.0" prefWidth="213.00000762939453" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Select Store">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="cbStores" onAction="#checkStockInStore" promptText="Select Store" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
               </children>
            </GridPane>
            <GridPane fx:id="gpShipment" prefHeight="122.0" prefWidth="296.0" visible="false">
               <columnConstraints>
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="159.80003662109374" minWidth="-Infinity" />
                  <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="213.6" minWidth="10.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints maxHeight="49.39998168945313" minHeight="0.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="84.0" minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="96.0" minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="96.0" minHeight="10.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="96.0" minHeight="10.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Street:" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label text="City:" textAlignment="CENTER" wrapText="true" GridPane.rowIndex="1">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" contentDisplay="CENTER" lineSpacing="2.0" text="Postal code:" textAlignment="CENTER" wrapText="true" GridPane.rowIndex="2">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" contentDisplay="CENTER" lineSpacing="2.0" text="Full Name:" textAlignment="CENTER" wrapText="true" GridPane.rowIndex="3">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <Label alignment="CENTER" contentDisplay="CENTER" lineSpacing="2.0" text="Phone Number:" textAlignment="CENTER" wrapText="true" GridPane.rowIndex="4">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtStreet" alignment="CENTER" promptText="Street of shipment" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
                  <TextField fx:id="txtCity" alignment="CENTER" promptText="City of shipment" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                  <TextField fx:id="txtPostCode" alignment="CENTER" promptText="Postal code of shipment" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
                  <TextField fx:id="txtName" alignment="CENTER" promptText="Name of shipment reciver" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
                  <HBox GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
                     <children>
                        <TextField fx:id="txtPhoneAreaCode" alignment="CENTER" maxWidth="90.0" promptText="Area code" />
                        <Label prefHeight="26.0" text="-" />
                        <TextField fx:id="txtPhonePost" alignment="CENTER" maxWidth="160.0" prefWidth="150.0" promptText="Phone number" />
                     </children>
                  </HBox>
               </children>
            </GridPane>
            <Button fx:id="btnSend" contentDisplay="CENTER" mnemonicParsing="false" onAction="#addDelivery" text="Send" />
         </children>
      </VBox>
      <Button mnemonicParsing="false" onAction="#back" text="Back" />
      <Label fx:id="lblMsg" alignment="CENTER" contentDisplay="CENTER" minHeight="35.0" textAlignment="CENTER" textFill="RED" wrapText="true" />
   </children>
</VBox>
