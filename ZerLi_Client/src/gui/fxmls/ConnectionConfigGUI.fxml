<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.controllers.ConnectionConfigGUIController">
   <children>
      <VBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <Label styleClass="title" text="Server" textAlignment="CENTER" textOverrun="CLIP" wrapText="true" />
            <JFXTextField id="txtHost" fx:id="txtHost" alignment="CENTER" prefHeight="8.0" prefWidth="181.0" promptText="Enter Host" />
            <JFXTextField id="txtPort" fx:id="txtPort" alignment="CENTER" labelFloat="true" prefHeight="8.0" prefWidth="181.0" promptText="Enter Port" />
         </children>
      </VBox>
      <JFXButton id="btnUpdateServer" fx:id="btnUpdateServer" mnemonicParsing="false" onAction="#updateServer" ripplerFill="ORANGE" text="Update Server" textFill="ORANGE" textOverrun="CLIP" wrapText="true">
         <graphic>
            <MaterialIconView fill="ORANGE" fontSmoothingType="LCD" glyphName="SYSTEM_UPDATE_ALT" size="15" textAlignment="CENTER">
               <font>
                  <Font name="Material Icons" size="15.0" />
               </font>
            </MaterialIconView>
         </graphic></JFXButton>
      <VBox alignment="CENTER_LEFT" spacing="15.0">
         <children>
            <Label styleClass="title" text="Data Base" textAlignment="CENTER" />
            <JFXTextField id="txtUrl" fx:id="txtUrl" alignment="CENTER" prefHeight="8.0" prefWidth="181.0" promptText="Enter data base URL" />
            <JFXTextField id="txtName" fx:id="txtName" alignment="CENTER" prefHeight="8.0" prefWidth="181.0" promptText="Enter data base Name" />
            <JFXTextField id="txtUserName" fx:id="txtUserName" alignment="CENTER" prefHeight="8.0" prefWidth="181.0" promptText="Enter User Name" />
            <JFXTextField id="txtPassword" fx:id="txtPassword" alignment="CENTER" prefHeight="8.0" prefWidth="181.0" promptText="Enter Password" />
         </children>
      </VBox>
      <JFXButton id="btnUpdateDB" fx:id="btnUpdateDB" mnemonicParsing="false" onAction="#updateDB" ripplerFill="#ffa100" text="Update Data Base" textAlignment="CENTER" textFill="ORANGE" textOverrun="CLIP">
         <graphic>
            <MaterialIconView fill="ORANGE" fontSmoothingType="LCD" glyphName="SYSTEM_UPDATE_ALT" size="15" textAlignment="CENTER">
               <font>
                  <Font name="Material Icons" size="15.0" />
               </font>
            </MaterialIconView>
         </graphic></JFXButton>
   </children>
</VBox>
