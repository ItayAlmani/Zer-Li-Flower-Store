<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="vbox" fx:id="vbox" alignment="CENTER" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="izhar.gui.controllers.CartGUIController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Label fx:id="lblTitleFPrice" styleClass="menuTitle" text="Final Price:" textAlignment="CENTER" textOverrun="CLIP" />
            <Label fx:id="lblFinalPrice" minWidth="50.0" textAlignment="CENTER" textOverrun="CLIP" />
         </children>
      </HBox>
      <JFXButton alignment="CENTER" buttonType="RAISED" mnemonicParsing="false" onAction="#createOrder" ripplerFill="ORANGE" text="Order Now!" textAlignment="CENTER" textFill="ORANGE" textOverrun="CLIP" wrapText="true">
         <graphic>
            <FontAwesomeIconView fill="ORANGE" fontSmoothingType="LCD" glyphName="SEND" size="15" textAlignment="CENTER">
               <font>
                  <Font name="FontAwesome" size="15.0" />
               </font>
            </FontAwesomeIconView>
         </graphic>
         <font>
            <Font size="15.0" />
         </font></JFXButton>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
